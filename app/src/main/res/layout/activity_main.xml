<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#979AD6"
    android:isScrollContainer="true"
    android:scrollbarStyle="outsideInset"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="#3d455b"
        android:fadeScrollbars="true"
        android:overScrollMode="ifContentScrolls"
        android:scrollIndicators="bottom|right"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarSize="10dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="10sp"
                android:text="@string/work_logger"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="60sp" />

            <EditText
                android:id="@+id/txtStopWatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="@string/_00_00_00_start"
                android:textAlignment="center"
                android:textColor="#152553"
                android:textSize="42dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtPunchIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Punch In"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnPunchIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#2F5A30"
                android:text="@string/punch_in"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txtPunchOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/punch_out"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnPunchOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#6A1919"
                android:text="@string/punch_out"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:backgroundTint="#2F5A30"
                android:text="Save"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="#6A1919"
                android:text="Cancel"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:backgroundTint="#2F5A30"
                android:text="Clear Punch" />

            <Button
                android:id="@+id/btnShifts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:backgroundTint="#7E773C"
                android:text="View Shifts"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>